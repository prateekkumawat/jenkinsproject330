pipeline {
    agent {
        label "devops"
    }
    tools {
        maven 'mvn'
    }
    stages{
        stage("Clean Workspace") { 
            steps {
                cleanWs()
            }
        }
        stage("Code Checkout"){
          steps{ 
            git url:"https://github.com/prateekkumawat/jenkinsproject330.git", branch: "artifacts"
          }
        }
        
        stage("Maven package build"){
            steps {
                sh 'mvn clean package'
                sh 'mvn install -f pom.xml'
            }
        }
     
       stage("Artifacts Upload"){
            steps{
                nexusArtifactUploader (
                    protocol: 'http',
                    nexusVersion: 'nexus3',
                    groupId: 'mavencommends'
                    nexusUrl: 'http://18.61.183.118:8081',
                    credentialsId: 'nexuscreds',
                    version: '0.2.2-SNAPSHOT',
                    repository: 'maven-releases'
                    artifacts: [
                        [artifactId: mavencommends,
                        classifier: '',
                        file: 'mavencommands' + version + '.jar',
                        type: 'jar']
                    ]    
                )    
            }
        }

        
    }
}
pipeline {
    agent {
        label "devops"
    }
    tools {
        maven 'mvn'
    }
    stages{
        stage("Clean Workspace") { 
            steps {
                cleanWs()
            }
        }
        stage("Code Checkout"){
          steps{ 
            git url:"https://github.com/prateekkumawat/jenkinsproject330.git", branch: "nexus"
          }
        }
        
        stage("Maven package build"){
            steps{
                sh 'mvn clean package'
            }
        }
     
       stage("Artifacts Upload"){
            steps{
                nexusArtifactUploader (
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    nexusUrl: 'http://18.61.183.118:8081/repository/maven-releases/',
                    groupId: 'mynx.myca500',
                    version: 1.1,
                    repository: 'nexus-releases',
                    credentialsId: 'nexuscreds',
                    artifacts: [
                        [artifactId: myca-commons,
                        classifier: '',
                        file: 'myca-common' + version + '.jar',
                        type: 'jar']
                    ]    
                )    
            }
        }

        
    }
}
pipeline {
    agent {
        label "devops"
    }
    tools {
        maven 'mvn'
    }
    stages{
        stage("Clean Workspace") { 
            steps {
                cleanWs()
            }
        }
        stage("Code Checkout"){
          steps{ 
            git url:"https://github.com/prateekkumawat/jenkinsproject330.git", branch: "artifacts"
          }
        }
        
        stage("Maven package build"){
            steps {
                sh 'mvn clean package'
                sh 'mvn install -f pom.xml'
                sh 'mvn package clean deploy '
            }
        }
     
    //    stage("Artifacts Upload"){
